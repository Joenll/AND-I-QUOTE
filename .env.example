APP_NAME="AND I QUOTE"
APP_ENV=local
APP_KEY=base64:your-generated-app-key
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- DATABASE (MySQL) ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=and_i_quote
DB_USERNAME=root
DB_PASSWORD=

# --- SESSION / CACHE ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database


# --- BREVO API (For API calls instead of SMTP) ---
BREVO_API_KEY=your-brevo-api-key                  # API key from Brevo dashboard
BREVO_SENDER_EMAIL=hello@example.com              # Sender email for API calls
BREVO_SENDER_NAME="AND I QUOTE"                   # Sender name for API calls

# --- FRONTEND ---
VITE_APP_NAME="${APP_NAME}"
